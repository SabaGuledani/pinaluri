<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GoodHabits"
    android:orientation="vertical"
    >



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/badHabitName"
                android:layout_gravity="left"
                android:layout_marginLeft="20dp"
                android:textSize="25sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="f.xample:Cigarettes"
                />

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="65dp"
                android:layout_marginLeft="15dp"
                >

                <TableRow

                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:weightSum="2">

                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="current savings"
                        android:fontFamily="sans-serif-medium"
                        android:textSize="27sp"
                        android:textColor="#010422"
                        android:layout_weight="1"/>



                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    >

                    <TextView
                        android:id="@+id/textView6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-medium"
                        android:text="0,00 Gel"
                        android:textColor="#010422"
                        android:textSize="40sp" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="15dp"
                    android:weightSum="2">

                    <TextView
                        android:id="@+id/textView7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Day since start date"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/textView8"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0 days "
                        android:textStyle="bold"
                        android:layout_weight="1"
                        android:gravity="end"
                        android:textSize="15sp"
                        />
                </TableRow>

                <TableRow
                    android:layout_marginTop="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:weightSum="15">

                    <TextView
                        android:id="@+id/textView10"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Money spent per day"
                        android:layout_weight="7"
                        android:textSize="15sp"/>

                    <TextView
                        android:id="@+id/textView11"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="6"

                        android:gravity="end"
                        android:text="0,00 Gel"
                        android:layout_gravity="end"

                        android:textColor="#4CAF50"
                        android:textSize="15sp" />
                    <TextView
                        android:id="@+id/editSpentMoney"
                        android:drawableEnd="@drawable/ic_baseline_edit_24"
                        android:drawableTint="#4CAF50"
                        android:layout_weight="1"
                        android:layout_gravity="end"
                        android:gravity="end"/>
                </TableRow>
            </TableLayout>

            <TableLayout
                android:layout_marginTop="30dp"
                android:layout_marginLeft="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:id="@+id/textView12"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Projected savings"
                        android:fontFamily="sans-serif-medium"
                        android:textSize="27sp"
                        android:textColor="#010422"/>
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="20dp"
                    android:weightSum="2">

                    <TextView
                        android:id="@+id/textView13"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Projected monthly saving"
                        android:layout_weight="1"
                        android:textSize="15sp"/>

                    <TextView
                        android:id="@+id/textView14"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0,00 Gel "
                        android:textColor="#2196F3"
                        android:layout_weight="1"
                        android:gravity="end"
                        android:textSize="15sp"
                        />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:weightSum="2">

                    <TextView
                        android:id="@+id/textView15"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Projected monthly saving"
                        android:layout_weight="1"
                        android:textSize="15sp"/>

                    <TextView
                        android:id="@+id/textView16"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="end"
                        android:text="0,00 Gel "
                        android:textColor="#2196F3"
                        android:textSize="15sp" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </TableLayout>
        </LinearLayout>


</LinearLayout>